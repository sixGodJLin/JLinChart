<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarChartActivity">

    <com.example.linj.jlinchart.chart.BarChart
        android:id="@+id/bar_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/px32"
        android:paddingEnd="@dimen/px32"
        android:paddingStart="@dimen/px32"
        app:bar_color="@color/colorAccent"
        app:bar_icon="@drawable/ic_launcher_background"
        app:bar_title="病发次数"
        app:bar_unit="次" />
</android.support.constraint.ConstraintLayout>